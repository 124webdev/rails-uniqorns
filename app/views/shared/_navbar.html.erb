<div class="navbar sticky-top">
  <div class="logo">
    <%= link_to root_path do %>
      <%= image_tag "uniqorn_logo_text.png", alt: "Logo" %>
    <% end %>
  </div>
  <div class="right-section">
    <div class="tabs">
      <%= link_to "Book a unicorn", uniqorns_path %>
      <% if user_signed_in? %>
        <%= link_to "Bookings", bookings_path %>
      <% else %>
        <%= link_to "Bookings", new_user_session_path %>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
        <div class="pt-2">
          <img
            src='https://kitt.lewagon.com/placeholder/users/arthur-littm'
            class="avatar"
          />
        </div>
      <% end %>
    </div>
  </div>
</div>
