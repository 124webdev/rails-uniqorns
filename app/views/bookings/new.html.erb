<div class="container w-25">
  <h1>Book
    <%= @uniqorn.name %></h1>

  <%= simple_form_for [@uniqorn, @booking] do |f| %>
    <div class="form-inputs">
      <%= f.input :start_date %>
      <%= f.input :end_date %>
    </div>
    <div class="form-actions btn btn-lg custom-button">
      <%= f.button :submit, "Book" %>
    </div>
  <% end %>
</div>
