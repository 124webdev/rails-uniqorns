<div class="container w-25 pb-4">
  <h3 class="text-center pt-2">List Your UniQorn :)</h3>

  <%= simple_form_for @uniqorn do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :age %>
      <%= f.input :color %>
      <%= f.input :speed %>
      <%= f.input :price_per_day %>
      <%= f.input :can_fly %>
    </div>

    <div class="form-actions d-flex justify-content-center">
      <%= f.button :submit, "List Your Uniqorn", class: "btn-lg  custom-button"%>
    </div>
  <% end %>
</div>
